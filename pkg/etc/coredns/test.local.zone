$ORIGIN test.local.
@    3600 IN SOA ns1.test.local. hostmaster.test.local. (
                2024102801 ; serial
                3600       ; refresh (1 hour)
                900        ; retry (15 minutes)
                604800     ; expire (1 week)
                3600       ; minimum (1 hour)
                )

     3600 IN NS  ns1.test.local.
     3600 IN NS  ns2.test.local.

@    IN A      192.168.1.1
www  IN A      192.168.1.10
api  IN A      192.168.1.11
db   IN A      192.168.1.12
mail IN A      192.168.1.20

; Aliases
web  IN CNAME  www
server IN CNAME www

; Nameservers
ns1  IN A      192.168.1.100
ns2  IN A      192.168.1.101

; Mail records
@    IN MX 10  mail.test.local.
mail IN A      192.168.1.20
